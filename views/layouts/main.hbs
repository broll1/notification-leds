    <script type="text/javascript">
        function showValue(newValue)
        {
	        document.getElementById("range").innerHTML = "Intensity: " + newValue;
        }
        
        function setVisibility(){
            var checkbox = document.getElementById("enableAutoSilence");
            console.log(checkbox);
            console.log(checkbox.checked);
            if(checkbox.checked){
                $("#timesBox").show();
            } else {
                $("#timesBox").hide();
            }
        }
